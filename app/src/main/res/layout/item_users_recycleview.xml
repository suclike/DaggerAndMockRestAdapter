<?xml version="1.0" encoding="utf-8"?>
<ciriti.retrofitmockserver.widget.RecycleItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:id="@+id/item_profile_image"
        android:background="#ff0000"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_profile_image"
        android:layout_toRightOf="@id/item_profile_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        tools:text="u2020"/>

    <TextView
        android:id="@+id/item_profile_anni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_profile_name"
        android:layout_toEndOf="@id/item_profile_name"
        android:layout_toRightOf="@id/item_profile_image"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="31"
        />
</ciriti.retrofitmockserver.widget.RecycleItemLayout>